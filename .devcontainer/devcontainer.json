{
    "image": "docker.pkg.github.com/tomasaschan/vscode-devcontainers/haskell:0.1",
    "mounts": [
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
        "source=${localEnv:HOME}/.ssh,target=/home/dev/.ssh-localhost,type=bind,readonly",
        "source=${localWorkspaceFolder}/.devcontainer/bashrc.d,target=/home/dev/.bashrc.d,type=bind,readonly",
    ],
    "extensions": [
        "alanz.vscode-hie-server"
    ],
    "appPort": 3000
}